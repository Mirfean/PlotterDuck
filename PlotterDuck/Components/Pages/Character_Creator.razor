@page "/character-creator"
@using PlotterDuck.Components.Models

<h3>Character_Creator</h3>

<form>
    <label for="fName">First Name:</label>
    <input type="text" id="fName" name="fName" @bind="@character.FName" />

    <label for="lName">Last Name:</label>
    <input type="text" id="lName" name="lName" @bind="@character.LName" />

    <label for="age">Age:</label>
    <input type="number" id="age" name="age" @bind="@character.Age" />

    <label for="race">Race:</label>
    <input type="text" id="race" name="race" @bind="@character.Race" />

    <label for="class">Class:</label>
    <input type="text" id="class" name="class" @bind="@character.Class" />

    <label for="fraction">Fraction:</label>
    <input type="text" id="fraction" name="fraction" @bind="@character.Fraction"/>

    <button type="submit" @onclick="CreateNewCharacter">Create Character</button>
</form>

@code {
    private Character character = new Character();
    private CharacterService characterService = new CharacterService();



    private async void CreateNewCharacter()
    {

        await characterService.AddCharacter(character);
	}
}
